@{
    ViewBag.Title = "Logon";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Xenon Boostrap Admin Panel" />
    <meta name="author" content="" />

    <title>选课后台登录</title>
    <link rel="stylesheet" href="http://fonts.useso.com/css?family=Arimo:400,700,400italic">
    <link rel="stylesheet" href="~/Areas/Admins/assets/css/fonts/linecons/css/linecons.css">
    <link rel="stylesheet" href="~/Areas/Admins/assets/css/fonts/fontawesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admins/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/Areas/Admins/assets/css/xenon-core.css">
    <link rel="stylesheet" href="~/Areas/Admins/assets/css/xenon-forms.css">
    <link rel="stylesheet" href="~/Areas/Admins/assets/css/xenon-components.css">
    <link rel="stylesheet" href="~/Areas/Admins/assets/css/xenon-skins.css">
    <link rel="stylesheet" href="~/Areas/Admins/assets/css/custom.css">
    <script src="~/Areas/Admins/assets/js/jquery-1.11.1.min.js"></script>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>
<body class="page-body login-page">

    <div class="login-container">

        <div class="row">
            <div class="col-sm-12 text-center">

                <script type="text/javascript">
                    jQuery(document).ready(function ($) {
                        // Reveal Login form
                        setTimeout(function () { $(".fade-in-effect").addClass('in'); }, 1);
                        //$("#yzm").click();
                        // Validation and Ajax action
                        $("form#login").validate({
                            rules: {
                                username: {
                                    required: true
                                },

                                passwd: {
                                    required: true
                                }
                            },

                            messages: {
                                username: {
                                    required: '请输入用户名'
                                },

                                passwd: {
                                    required: '请输入密码'
                                }
                            },

                            // Form Processing via AJAX
                            submitHandler: function (form) {
                                show_loading_bar(70); // Fill progress bar to 70% (just a given value)
                                var opts = {
                                    "closeButton": true,
                                    "debug": false,
                                    "positionClass": "toast-top-full-width",
                                    "onclick": null,
                                    "showDuration": "300",
                                    "hideDuration": "1000",
                                    "timeOut": "5000",
                                    "extendedTimeOut": "1000",
                                    "showEasing": "swing",
                                    "hideEasing": "linear",
                                    "showMethod": "fadeIn",
                                    "hideMethod": "fadeOut"
                                };

                                $.ajax({
                                    url: "/Admins/Account/Login",
                                    method: 'POST',
                                    dataType: 'json',
                                    data: {
                                        strCode: $(form).find('#code').val(),
                                        strPassword: $(form).find('#passwd').val()
                                    },
                                    success: function (resp) {
                                        if (resp.Bresult) {
                                            window.location.href = resp.Url;
                                        } else {
                                            alert(resp.Message);
                                        }
                                    }
                                });

                            }
                        });

                        // Set Form focus
                        $("form#login .form-group:has(.form-control):first .form-control").focus();
                    });
                </script>

                <!-- Errors container -->
                <div class="errors-container">
                </div>

                <!-- Add class "fade-in-effect" for login form effect -->
                <form method="post" role="form" id="login" class="login-form fade-in-effect">

                    <div class="login-header">
                        选课后台系统

                    </div>

                    <div class="form-group">
                        <label class="control-label text-left" for="code">账号</label>
                        <input type="text" class="form-control input-dark" name="code" id="code" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label class="control-label text-left" for="passwd">密码</label>
                        <input type="password" class="form-control input-dark" name="passwd" id="passwd" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark  btn-block text-left">
                            <i class="fa-lock"></i>
                            登录
                        </button>
                    </div>

                </form>
            </div>

        </div>

    </div>

    <!-- Bottom Scripts -->
    <script src="~/Areas/Admins/assets/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admins/assets/js/TweenMax.min.js"></script>
    <script src="~/Areas/Admins/assets/js/resizeable.js"></script>
    <script src="~/Areas/Admins/assets/js/joinable.js"></script>
    <script src="~/Areas/Admins/assets/js/xenon-api.js"></script>
    <script src="~/Areas/Admins/assets/js/xenon-toggles.js"></script>
    <script src="/Areas/Admins/assets/js/jquery-validate/jquery.validate.min.js"></script>
    <script src="/Areas/Admins/assets/js/toastr/toastr.min.js"></script>

    <!-- JavaScripts initializations and stuff -->
    <script src="/Areas/Admins/assets/js/xenon-custom.js"></script>
</body>
